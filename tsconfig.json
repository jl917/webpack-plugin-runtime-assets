{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNEXT",
    "moduleResolution": "Node",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "outDir": "./lib/"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./src/*"
  ]
}